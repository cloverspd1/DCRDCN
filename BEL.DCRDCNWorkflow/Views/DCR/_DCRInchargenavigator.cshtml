@using BEL.DCRDCNWorkflow.Model.DCR
@using BEL.CommonDataContract
@model SCMInchargeSection


<div class="form-horizontal">
    @using (Ajax.BeginForm("SaveSCMHead", "DCR", new AjaxOptions
    {
        HttpMethod = "POST",
        LoadingElementId = "loading",
        OnFailure = "OnFailure",
        OnSuccess = "OnSuccess",
        OnBegin = "BeginClient"
    }, new { enctype = "multipart/form-data" }))
    {
       
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-4 control-label">
                    <span class="text-danger text-default-light">*</span>
                    @Html.LabelFor(m => m.DCRIncharge, ResourceNames.DCR)
                    
                </label>
                <div class="col-sm-8">
                    <div class="form-control noborder text-left">
                        <div class="form-control noborder">

                            <select class="form-control" id="D&DHODDISPOSA" name="D&DHODDISPOSA">
                                <option>Select</option>
                                <option>Karan Kalra</option>
                                <option>Anand Suri</option>
                            </select>

                            @Html.ValidationMessageFor(m => m.DCRIncharge, ResourceNames.DCR)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-4 control-label">
                    @Html.LabelFor(m => m.NavigatorComment, ResourceNames.DCR)
                </label>
                <div class="col-sm-8">
                    <div class="form-control noborder text-left">
                        @Html.TextBoxFor(m => m.NavigatorComment, new { @class = "form-control integeronly", data_toggle = "tooltip", title = "Max 255 characters" })
                       
                </div>
            </div>
        </div>
    </div>
        </div>
    }
</div>
