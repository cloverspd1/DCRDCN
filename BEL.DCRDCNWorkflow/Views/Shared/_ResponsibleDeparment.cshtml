@using PIL.SPDataContract.Common
@model List<ApplicationStatus>
<div class="card">
    <div class="card-head">
        @Html.ResourceValue("Section_ResponsibleDepartment", ResourceNames.Common_ApplicationStatus)
        <div class="btn collapse-btn collapsed" data-toggle="collapse" data-target="#applicationstatusbody"><i class="fa fa-chevron-down"></i></div>
    </div>
    <div id="applicationstatusbody" class="card-body">
        <div class="panel-body grid-view">
            <div class="table-responsive">
                <table class="table table-hover table-bordered someTable">
                    <thead>
                        <tr>
                            <th>@Html.ResourceValue("Grid_Title_Departments", ResourceNames.Common_ApplicationStatus)</th>
                            <th>@Html.ResourceValue("Grid_Title_Person", ResourceNames.Common_ApplicationStatus)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                if (item.Role != UserRoles.VIEWER)
                                {
                                    <tr>
                                        <td>@item.Role</td>
                                        <td>
                                            @Html.Partial("_ApproverUser", item)
                                        </td>
                                    </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-danger">
                                    @Html.ResourceValue("Grid_Text_NoData", ResourceNames.Common)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>